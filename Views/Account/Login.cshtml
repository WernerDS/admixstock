@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-4 mx-auto">
	    <div class="text-center mb-4">
	    	<h1>@ViewData["Title"]</h1>
	    </div>
        <div class="card mb-4">
	        <div class="card-body">
	            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
	                <div asp-validation-summary="All" class="text-danger"></div>
	                <div class="form-group">
	                    <input asp-for="Email" class="form-control" placeholder="Email..." />
	                    <span asp-validation-for="Email" class="text-danger"></span>
	                </div>
	                <div class="form-group">
	                    <input asp-for="Password" class="form-control" placeholder="Password..." />
	                    <span asp-validation-for="Password" class="text-danger"></span>
	                </div>
	                <div class="form-group">
	                    <div class="custom-control custom-checkbox">
							<input type="checkbox" class="custom-control-input" id="customCheck1" asp-for="RememberMe">
							<label class="custom-control-label" for="customCheck1">@Html.DisplayNameFor(m => m.RememberMe)</label>
						</div>
	                </div>
	                <div class="form-group text-center">
	                    <button type="submit" class="btn btn-primary btn-block">Log In</button>
		            </div>
	                <div class="text-center">
		                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
		                <a asp-action="ForgotPassword">Forgot your password?</a>
	                </div>
	            </form>
	        </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("ValidationScriptsPartial")
}
