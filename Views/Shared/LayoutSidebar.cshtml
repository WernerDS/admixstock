<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
	@if (Context.Request.Path.ToString().Length <= 1)
    {
        <title>AdMix Stock</title>
    }
    else
    {
        <title>@ViewData["Title"] - AdMix Stock</title>
    }
	
	<!-- Core Styles -->
	<link rel="stylesheet" href="~/css/admix.css">
    
    <!-- Font Awesome 5 -->
    <script>
		FontAwesomeConfig = { searchPseudoElements: true };
	</script>  
	<script defer src="~/js/fontawesome-all.js"></script>
	  
</head>
<body class="dashboard-body pri-sec-gradient">
	<main class="main">
		@await Html.PartialAsync("Pageload")
		@await Html.PartialAsync("Header")
		@await Html.PartialAsync("Sidebar")
		<section class="content">
			@RenderBody()
		</section>
	</main>
	
	<!-- Core Scripts -->
    <script src="~/js/jquery-3.2.1.min.js"></script>
	<script src="~/js/popper.min.js"></script>
	<script src="~/js/bootstrap.min.js"></script>
	
	<!-- Vendor Scripts -->
	
	@RenderSection("Scripts", required: false)
	<script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
